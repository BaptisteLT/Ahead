{% set url = app.request.requestUri %}

<header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_homepage') }}">AHEAD</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse ms-3" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        {#TODO: current page#}
                        <a class="nav-link {{ path('app_map') == url ? 'nav-active' : '' }}" aria-current="page" href="{{ path('app_map') }}">Carte des clusters</a>
                    </li>
                    {% if app.user %}
                    <span class="dot-separator"></span>
                        <li class="nav-item">
                            <a class="nav-link {{ path('app_form') == url ? 'nav-active' : '' }}" href="{{ path('app_form') }}">Déclarer des symptômes</a>
                        </li>
                    {% endif %}
                </ul>
                {% if app.user is null %}
                    <ul class="navbar-nav mb-2 mb-lg-0 me-2">
                        <li class="nav-item">
                            <a class="nav-link {{ path('app_register') == url ? 'nav-active' : '' }}" href="{{ path('app_register') }}">S'inscrire</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ path('app_login') == url ? 'nav-active' : '' }}" href="{{ path('app_login') }}">Se connecter</a>
                        </li>
                    </ul>
                    <a href="{{ path('connect_google_start') }}" class="oauth_button">
                        <img src="{{ asset('icons/google-logo.png') }}" alt="Logo google">
                        <span>Se connecter avec Google</span>
                    </a>
                {% else %}
                    <ul class="navbar-nav mb-2 mb-lg-0 me-2">
                        <li class="nav-item">
                            <a class="nav-link {{ path('app_logout') == url ? 'nav-active' : '' }}" href="{{ path('app_logout') }}">Se déconnecter</a>
                        </li>
                    </ul>
                {% endif %}
            </div>
        </div>
    </nav>
</header>
